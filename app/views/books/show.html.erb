<div class='container'>
  <div>
    <%= render "layouts/errors", obj: @book %>
  </div>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @new_book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td>
            <%= link_to @book.user do %>
              <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
              <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
          
          <% if @book.favorited_by?(current_user) %>
            <td>
              <p>
                <%= link_to book_favorites_path(@book), method: :delete, class: "text-decoration-none text-danger" do %>
                  <i class="fas fa-heart"></i><%= @book.favorites.count %>
                <% end %>
              </p>
            </td>
          <% else %>
            <td>
              <p>
                <%= link_to book_favorites_path(@book), method: :post, class: "text-decoration-none text-primary" do %>
                  <i class="fas fa-heart"></i><%= @book.favorites.count %>
                <% end %>
              </p>
            </td>
          <% end %>
          <td>
            <p>コメント数: <%= @book.book_comments.count %></p>
          </td>
        </tr>
      </table>
      
      <div>
        <% @book.book_comments.each do |book_comment| %>
          <%= link_to user_path(book_comment.user_id), class: "text-decoration-none" do %>
            <%= image_tag book_comment.user.get_profile_image, size:"50x50" %>
          <% end %>
          
          <%= book_comment.comment %>
          
          <% if book_comment.user_id == current_user.id %>
            <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger btn-sm" %>
          <% end %>
          <p>
            <%= link_to book_comment.user.name, user_path(book_comment.user_id) %>
          </p>
          
        <% end %>
      </div>
      
      <div>
        <%= form_with model: [@book, @book_comment] do |f| %>
          <div class="form-group">
            <%= f.text_area :comment, rows: "5" , class: "form-control book_book_comment" %>
          </div>
          <div class="form-group">
            <%= f.submit "送信" %>
          </div>
        <% end %>
      </div>
      
    </div>
  </div>
</div>