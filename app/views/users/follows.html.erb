<h2>Follow Users</h2>
<% if @following_users.exists? %>
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @following_users.each do |follow| %>
        <tr>
          <td><%= image_tag follow.get_profile_image, size: "30x30" %></td>
          <td><%= follow.name %></td>
          <td>フォロー数: <%= follow.follows.count %></td>
          <td>フォロワー数: <%= follow.followers.count %></td>
          <td><%= link_to "Show", user_path(follow.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Not following anyone yet!</p>
<% end %>